{
  "private": true,
  "name": "@alinea/root",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "esbx prepare && run-p dev:check dev:next dev:compile",
    "dev:compile": "esbx dev",
    "dev:next": "yarn workspace @alinea/web dev",
    "dev:check": "tsc -w",
    "trace": "tsc --noEmit --incremental false --emitDeclarationOnly false --diagnostics --generateTrace private/trace && speedscope private/trace/trace.json",
    "build": "esbx build",
    "test": "esbx test",
    "clean": "esbx clean",
    "bump": "esbx version",
    "prepare": "copy-env-cli",
    "gen:types": "typedoc --json apps/web/src/data/types.json",
    "gen:bundle": "esbx bundleTs"
  },
  "files": [],
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@esbx/extension": "^0.0.19",
    "@esbx/external": "^0.0.19",
    "@esbx/react": "^0.0.19",
    "@esbx/reload": "^0.0.19",
    "@esbx/reporter": "^0.0.19",
    "@esbx/run": "^0.0.19",
    "@esbx/sass": "^0.0.19",
    "@esbx/static": "^0.0.19",
    "@esbx/target": "^0.0.20",
    "@esbx/workspaces": "^0.0.19",
    "@types/glob": "^7.1.4",
    "@types/node": "^16.9.0",
    "autoprefixer": "^10.4.2",
    "compare-versions": "^4.1.3",
    "copy-env-cli": "1.0.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.14.11",
    "esbx": "^0.0.18",
    "fs-extra": "^10.0.0",
    "glob": "^7.2.0",
    "memfs": "^3.4.1",
    "npm-run-all": "^4.1.5",
    "postcss-pxtorem": "^6.0.0",
    "speedscope": "^1.14.0",
    "typedoc": "^0.22.15",
    "typescript": "^4.7.3",
    "typescript-plugin-css-modules": "^3.4.0",
    "uvu": "^0.5.1"
  },
  "packageManager": "yarn@3.2.0",
  "resolutions": {
    "prosemirror-model": "1.14.3",
    "prosemirror-view": "1.20.3",
    "mime-db": "1.51.0"
  }
}
