{
  "private": true,
  "name": "@alinea/root",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "wireit",
    "build": "wireit",
    "type": "wireit",
    "test": "wireit",
    "dev:check": "tsc -w",
    "dev:next": "yarn workspace @alinea/web dev",
    "dev:compile": "esbx dev",
    "dev:stories": "ladle serve --stories \"packages/**/*.stories.tsx\"",
    "build:stories": "ladle build --base /stories --stories  \"packages/**/*.stories.tsx\" --outDir apps/web/public/stories",
    "trace": "tsc --noEmit --incremental false --emitDeclarationOnly false --diagnostics --generateTrace private/trace && speedscope private/trace/trace.json",
    "clean": "esbx clean",
    "bump": "esbx version",
    "prepare": "copy-env-cli"
  },
  "wireit": {
    "dev": {
      "command": "run-p dev:check dev:next dev:compile",
      "dependencies": [
        "./apps/web:gen:types"
      ]
    },
    "build": {
      "command": "esbx build",
      "dependencies": [
        "type"
      ],
      "files": [
        "packages/*/src/**/*.{ts,tsx}"
      ],
      "output": [
        "dist/out",
        "packages/*/dist/**/*"
      ]
    },
    "type": {
      "command": "tsc --diagnostics",
      "files": [
        "tsconfig.json",
        "packages/*/src/**/*.{ts,tsx}"
      ],
      "output": [
        "dist/types"
      ]
    },
    "test": {
      "command": "cross-env FORCE_COLOR=1 esbx test",
      "dependencies": [
        "build"
      ]
    }
  },
  "files": [],
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@esbx/alias": "^0.0.20",
    "@esbx/extension": "^0.0.19",
    "@esbx/external": "^0.0.19",
    "@esbx/reload": "^0.0.19",
    "@esbx/reporter": "^0.0.19",
    "@esbx/run": "^0.0.19",
    "@esbx/sass": "^0.0.19",
    "@esbx/static": "^0.0.19",
    "@esbx/target": "^0.0.20",
    "@esbx/workspaces": "^0.0.19",
    "@ladle/react": "^2.0.2",
    "@types/glob": "^7.1.4",
    "@types/node": "^16.9.0",
    "autoprefixer": "^10.4.2",
    "compare-versions": "^4.1.3",
    "copy-env-cli": "1.0.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.14.51",
    "esbx": "^0.0.18",
    "fs-extra": "^10.0.0",
    "glob": "^7.2.0",
    "memfs": "^3.4.1",
    "npm-run-all": "^4.1.5",
    "postcss-pxtorem": "^6.0.0",
    "speedscope": "^1.14.0",
    "typedoc": "^0.22.15",
    "typescript": "^4.7.3",
    "typescript-plugin-css-modules": "^3.4.0",
    "uvu": "^0.5.1",
    "wireit": "^0.7.1"
  },
  "packageManager": "yarn@3.2.0",
  "resolutions": {
    "y-prosemirror": "1.1.2",
    "mime-db": "1.51.0",
    "yjs": "13.5.41",
    "prosemirror-model": "1.18.1",
    "prosemirror-schema-list": "1.2.0",
    "prosemirror-state": "1.4.1",
    "prosemirror-transform": "1.6.0",
    "prosemirror-view": "1.26.2"
  }
}
