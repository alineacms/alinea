{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "preserveWatchOutput": true,
    "outDir": "dist",
    "incremental": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "paths": {
      "@alinea/input.*/view": ["./packages/input.*/src/view.ts"],
      "@alinea/input.*": ["./packages/input.*/src/view.ts"],
      "@alinea/auth.passwordless/*": ["./packages/auth.passwordless/src/*"],
      "@alinea/core/*": ["./packages/core/src/*"],
      "@alinea/cli/*": ["./packages/cli/src/*"],
      "@alinea/dashboard/*": ["./packages/dashboard/src/*"],
      "@alinea/backend/*": ["./packages/backend/src/*"],
      "@alinea/store/*": ["./packages/store/src/*"],
      "@alinea/editor/*": ["./packages/editor/src/*"],
      "@alinea/ui": ["./packages/ui/src"],
      "@alinea/ui/*": ["./packages/ui/src/*"],
      "@alinea/content/*": ["./apps/web/.alinea/*"],
      "@alinea/content": ["./apps/web/.alinea"],
      "@alinea/*": ["./packages/*/src"]
    },
    "plugins": [{"name": "typescript-plugin-css-modules"}],
    "types": ["react/next", "react-dom/next"]
  },
  "include": ["packages"],
  "exclude": ["node_modules", "packages/website", "packages/**/dist"]
}
