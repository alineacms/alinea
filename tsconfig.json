{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "preserveWatchOutput": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "react-jsx",
    "plugins": [{"name": "typescript-plugin-css-modules"}],
    "rootDir": "./src",
    "paths": {
      "alinea/*": ["./src/*.js"]
    }
  },
  "include": ["src", "test"]
}
