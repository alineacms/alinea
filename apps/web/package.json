{
  "private": true,
  "name": "@alinea/web",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "wireit",
    "dev": "wireit",
    "generate": "wireit",
    "gen:types": "wireit",
    "gen:bundleTs": "wireit",
    "dev:check": "tsc -w",
    "start": "next start",
    "lint": "next lint",
    "seed": "tsx ./seed.ts"
  },
  "wireit": {
    "build": {
      "command": "alinea generate -- next build",
      "dependencies": [
        "../..:build",
        "gen:types",
        "gen:bundleTs"
      ]
    },
    "generate": {
      "command": "alinea generate --fix",
      "dependencies": [
        "../..:build"
      ]
    },
    "dev": {
      "command": "cross-env FORCE_COLOR=1 next dev",
      "dependencies": [
        "../..:build",
        "gen:types",
        "gen:bundleTs"
      ]
    },
    "gen:types": {
      "command": "cd ../.. && typedoc --json apps/web/src/data/types.json",
      "dependencies": [
        "../..:type"
      ],
      "files": [],
      "output": [
        "src/data/types.json"
      ]
    },
    "gen:bundleTs": {
      "command": "cd ../.. && esbx bundleTs",
      "dependencies": [
        "../..:type"
      ],
      "output": [
        "src/data/alinea.d.ts"
      ]
    }
  },
  "dependencies": {
    "@alinea/auth.passwordless": "0.0.0",
    "@alinea/backend": "0.0.0",
    "@alinea/cli": "0.0.0",
    "@alinea/content": "link:./.alinea",
    "@alinea/core": "0.0.0",
    "@alinea/dashboard": "0.0.0",
    "@alinea/ui": "0.0.0",
    "@monaco-editor/react": "^4.4.5",
    "esbuild-wasm": "^0.14.43",
    "next": "^v12.2.6-canary.10",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-string-replace": "^1.0.0",
    "remark": "^14.0.2",
    "remark-html": "^15.0.1",
    "shiki": "^0.10.1",
    "use-clipboard-copy": "^0.2.0"
  },
  "devDependencies": {
    "@types/find-config": "^1.0.1",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.0",
    "cross-env": "^7.0.3",
    "dts-bundle": "^0.7.3",
    "find-config": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-pxtorem": "^6.0.0",
    "raw-loader": "^4.0.2",
    "tsx": "^3.8.1",
    "webassembly-loader": "^1.1.0",
    "wireit": "^0.7.1"
  }
}
